<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <layer-list>
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="-40%"
            android:pivotY="87%" >
            <shape
                android:shape="rectangle" >
                <solid
                    android:color="#757575" />
            </shape>
        </rotate>
    </item>
</layer-list>
    </item>

    <item android:state_focused="true" >
        <layer-list>
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="-40%"
            android:pivotY="87%" >
            <shape
                android:shape="rectangle" >
                <solid
                    android:color="#757575" />
            </shape>
        </rotate>
    </item>
</layer-list>
    </item>

    <item>        
        <layer-list>
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="-40%"
            android:pivotY="87%" >
            <shape
                android:shape="rectangle" >
                <solid
                    android:color="#cccccc" />
            </shape>
        </rotate>
    </item>
</layer-list>
    </item>
</selector>